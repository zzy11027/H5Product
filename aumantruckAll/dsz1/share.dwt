<!DOCTYPE html>
<html lang="en" style="height: 100%;padding: 0; margin: 0;">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge" />
    <title>欧曼官网二维码</title>
    <script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
    <script>
        wx.config({
            debug: false, // 开启调试模式调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印�?
            appId: 'wxa1ef57725e6a43a9', // 必填，公众号的唯一标识
            timestamp: '{$arr.timestamp}', // 必填，生成签名的时间
            nonceStr: '{$arr.noncestr}', // 必填，生成签名的随机
            signature: '{$arr.sha1}',// 必填，签名，见附
            jsApiList: [
                "onMenuShareTimeline",
                "scanQRCode",
                "onMenuShareAppMessage",
                "onMenuShareQQ",
                "onMenuShareWeibo",
                "onMenuShareQZone"
            ] // 必填，需要使用的JS接口列表，所有JS接口列表见附
        });
        wx.ready(function () {
            wx.onMenuShareAppMessage({
                title: '到底多优秀？各位老司机，欧曼官方给你来认证！', // 分享标题
                desc: '证明自己的时候到了，测试一下，如果你来高效物流卡车公开赛，会有什么表现？', // 分享描述
                link: 'http://www.aumantruck.com/mobile/spike_dsz.php', // 分享链接
                imgUrl: 'http://www.aumantruck.com/mobile/templates/dsz/img/fx.jpg', // 分享图标
                type: '', // 分享类型,music、video或link，不填默认为link
                dataUrl: '', // 如果type是music或video，则要提供数据链接，默认为空
                success: function () {
                    //alert("分享成功");
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                    //alert("取消成功");
                    // 用户取消分享后执行的回调函数
                }

            });
            wx.onMenuShareTimeline({
                title: '到底多优秀？各位老司机，欧曼官方给你来认证！', // 分享标题
                link: 'http://www.aumantruck.com/mobile/spike_dsz.php', // 分享链接
                imgUrl: 'http://www.aumantruck.com/mobile/templates/dsz/img/fx.jpg', // 分享图标
                success: function () {
                  //  alert("分享成功");
                    // 用户确认分享后执行的回调函数
                },
                cancel: function () {
                  //  alert("取消成功");
                    // 用户取消分享后执行的回调函数
                }
            });
        })
    </script>
</head>
<body>
<div  align="center" style="margin-top: 200px">
    <img align="center"  width="65%" height="65%;" src="templates/dsz/img/999.jpg" alt="">
</div>
</body>
</html>
